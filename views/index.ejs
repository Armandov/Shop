
<% include partials/header %>

<div class="container" >
 <div class="row">
   <!--form -->  
   <div class="col-md-5">
    <div class="card">
        <div class="card-body">
            <form action="/add" method="POST" >
                <div class="form-group">
                    <input type="text" name="articulo" id="" placeholder="Nuevo articulo" class="form-control">  
                </div>
                
                <div class="form-group">
                    <input type="text" name="precio" id="" placeholder="$Precio" class="form-control">  
                </div>
                <button type="submit"  class="btn btn-primary btn-block" >Guardar</button>
        </div>
    </div>   
   </div>
   
  
   <div class="col-md-7" >
       <table class="table table-bordered table-hover" >
           <thead>
<tr>
    <th>Codigo</th>
    <th>Articulo</th>
    <th>Precio</th>
    <th>Catalogo</th>
</tr>
           </thead>
<tbody>
  
    <% for(var i=0; i<Productos.length; i++) {%>
        <tr>
            <td><%= i + 1 %> </td>
            <td><%=Productos[i].articulo%></td>
            <td><%=Productos[i].precio%></td>
            <td>
    
              
              <a href="/detalles/ <%=Productos[i]._id%>"  class="btn btn-success">Detalles</a>
              <a href="/editar/ <%=Productos[i]._id%>" class="btn btn-success">Editar</a>
              <a href="/borrar <%=Productos[i]._id%>"  class="btn btn-danger">Eliminar</a>
            </td>
            
        </tr>
        
        
        </tbody>
</tbody>

       </table>

   </div>
 </div>   
</div>

<% include partials/footer %>